<div id="app" class="container-fluid">
  <div class="well well-sm">
    <div v-for="error in errors">{{ error }}</div>
    <p><input class="form-control" v-model="newTitle" placeholder="Title"></p>
    <p><textarea class="form-control" v-model="newPost" placeholder="Post"></textarea></p>
    <p><button class="btn btn-primary" v-on:click="addPost">Submit</button></p>
  </div>
  <div class="well well-sm" v-for="post in posts">
    <h4>{{ post.title }}</h4>
    <p>{{ post.post }}</p>
    <p class="small">Last Updated: {{ post.updated_at }}</p>
  </div>
</div>
